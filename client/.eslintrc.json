{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "extends": ["plugin:react/recommended", "plugin:react/jsx-runtime"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/display-name": "off",
    "semi": [2, "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
